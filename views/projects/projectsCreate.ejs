<%- include('../.include/.header.ejs') %>
    <%- include('../.include/.sinavbar.ejs') %>

    <main role="main" class="container my-5 py-5">
        <h1 class="h3 mb-5 font-weight-normal display-4 text-center">New project</h1>
        <form method="POST">
            <div class="form-group row">
                <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="title" placeholder="" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputContent" class="col-sm-2 col-form-label">Content</label>
                <div class="col-sm-10">
                    <textarea name="content" class="form-control" rows="10" placeholder="" required></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">Privacy</div>
                <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="privacy">
                    <label class="form-check-label">make it private</label>
                </div>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary btn-block">Create</button>
        </form>
    </main>

<%- include('../.include/.footer.ejs') %>
