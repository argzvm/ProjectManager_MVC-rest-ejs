<%- include('../.include/.header.ejs') %>
    <%- include('../.include/.sinavbar.ejs') %>

    <main role="main" class="container my-5 py-5">
        <h1 class="h3 mb-5 font-weight-normal display-4 text-center">Update project</h1>
        <form method="POST">
            <div class="form-group row">
                <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="title" placeholder="<%= data.title %>" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputContent" class="col-sm-2 col-form-label">Content</label>
                <div class="col-sm-10">
                    <textarea name="content" class="form-control" rows="10" placeholder="<%= data.content %>" required></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary btn-block">Update</button>
        </form>
    </main>

<%- include('../.include/.footer.ejs') %>
